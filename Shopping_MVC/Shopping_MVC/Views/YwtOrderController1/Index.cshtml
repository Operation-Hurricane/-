
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>

    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
</head>
<body>
    <div class="layui-tab layui-tab-card" lay-filter="demo" style="height:60px;">
        <ul class="layui-tab-title">
            <li class="layui-this" style="width: 85px;height:50px; font-size: 20px;">全部订单</li>
            <li style="width: 85px;height:50px; font-size: 20px;">待付款</li>
            <li style="width: 85px;height:50px; font-size: 20px;">待发货</li>
            <li style="width: 85px;height:50px; font-size: 20px;">待收货</li>
            <li style="width: 85px;height:50px; font-size: 20px;">待评价</li>
        </ul>
        <div class="layui-tab-content" style="height: 100px;">

            <div class="layui-tab-item layui-show">
                <table class="layui-hide" id="demo" lay-filter="test"></table>
            </div>
            <div class="layui-tab-item">
                <table class="layui-hide" id="demo2" lay-filter="test"></table>
            </div>
            <div class="layui-tab-item">
                <table class="layui-hide" id="demo3" lay-filter="test"></table>
            </div>
            <div class="layui-tab-item">
                <table class="layui-hide" id="demo4" lay-filter="test"></table>
            </div>
            <div class="layui-tab-item">
                <table class="layui-hide" id="demo5" lay-filter="test"></table>
            </div>
        </div>
    </div>
    
    <script>


        layui.use(['laydate', 'laypage', 'layer', 'table', 'carousel', 'upload', 'element', 'slider'], function () {
            var laydate = layui.laydate //日期
                , laypage = layui.laypage //分页
                , layer = layui.layer //弹层
                , table = layui.table //表格
                , carousel = layui.carousel //轮播
                , upload = layui.upload //上传
                , element = layui.element //元素操作
                , slider = layui.slider //滑块

            //element.on('tab(demo)', function (data) {
            //    layer.tips(this, {
            //        tips: 1
            //    });
            //});

            table.render({
                elem: '#demo'
                , height: 420
                , url: 'http://localhost:55620/api/GetOrder' //数据接口
                , title: '用户表'
                , page: true //开启分页
                , toolbar: 'default' //开启工具栏，此处显示默认图标，可以自定义模板，详见文档
                , totalRow: true //开启合计行
                , cols: [[ //表头
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'OAId', title: '订单Id', width: 80 }
                    , { field: 'OrderImg', title: '图片', width: 80, align: 'center', templet: "#imgtmp" }
                    , { field: 'CommodityColor', title: '颜色', width: 90 }
                    , { field: 'Sizes_Id', title: '尺码', width: 80 }
                    , { field: 'CommodityNumber', title: '数量', width: 80 }
                    , { field: 'OrderTime', title: '下单时间', width: 150 }
                    , { field: 'OrderNumber', title: '订单号', width: 200 }
                    , { field: 'PaymentStatus', title: '付款状态', width: 100 }
                    , { field: 'TotalPrices', title: '总价', width: 135 }
                    , { fixed: 'right', width: 165, align: 'center', toolbar: '#barDemo' }
                ]]
            });
        });
    </script>
</body>
</html>

<script type="text/html" id="imgtmp">
    <img src="{{ d.img_url}}" style="width:60px; height:60px;">
</script>
<style type="text/css">
    .layui-table-cell {
        height: auto !important;
        white-space: normal;
    }
</style>